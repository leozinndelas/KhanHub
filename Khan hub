local config = {
    desiredLevel = 100,
    farmRange = 50,
    attackCooldown = 1,
    teleportLocations = {
        startArea = Vector3.new(100, 10, 100),
        questGiver = Vector3.new(200, 10, 200),
        safeZone = Vector3.new(0, 10, 0)
    }
}

local function teleportTo(location)
    if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(location)
    end
end

local function findEnemies()
    local enemies = {}
    for _, npc in pairs(game.Workspace:GetChildren()) do
        if npc:IsA("Model") and npc:FindFirstChild("Humanoid") and npc:FindFirstChild("HumanoidRootPart") then
            local distance = (npc.HumanoidRootPart.Position - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
            if distance <= config.farmRange then
                table.insert(enemies, npc)
            end
        end
    end
    return enemies
end

local function attackEnemies(enemies)
    for _, enemy in pairs(enemies) do
        if enemy:FindFirstChild("Humanoid") then
            repeat
                enemy.Humanoid:TakeDamage(10)
                wait(config.attackCooldown)
            until enemy.Humanoid.Health <= 0
        end
    end
end

local function completeQuest()
    teleportTo(config.teleportLocations.questGiver)
    wait(2)
end

local function autoFarm()
    while true do
        if game.Players.LocalPlayer.Level < config.desiredLevel then
            completeQuest()
            local enemies = findEnemies()
            attackEnemies(enemies)
        else
            break
        end
        wait(1)
    end
end

print("Bem-vindo ao Script de Automação Blox Fruits!")
print("1. Auto-Farm")
print("2. Teletransporte")
print("3. Sair")
